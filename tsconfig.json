{
  "compilerOptions": {
    /* === Funcionalidades de decoradores (Nest, class-validator, etc.) === */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* === Compilación y salida === */
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "noEmitOnError": true,

    /* === Compatibilidad con Node y TSX === */
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* === Limpieza y control de errores === */
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "incremental": true,

    /* === Alias de rutas === */
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@cache/*": ["./src/cache/*"],
      "@config/*": ["./src/config/*"],
      "@exceptions": ["./src/exceptions"],
      "@libs/*": ["./src/libs/*"],
      "@utils/*": ["./src/utils/*"],
      "@validate/*": ["./src/validate/*"],
      "baileys": ["./node_modules/@whiskeysockets/baileys"]  // ✅ Alias añadido
    }
  },
  "exclude": ["node_modules", "test", "dist", "prisma"],
  "include": ["src/**/*", "src/**/*.json"]
}
